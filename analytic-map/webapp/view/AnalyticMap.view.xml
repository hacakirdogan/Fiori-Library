<mvc:View
    controllerName="analyticmap.controller.AnalyticMap"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:vbm="sap.ui.vbm"
    displayBlock="true"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <l:FixFlex>
            <l:flexContent>
                <vbm:AnalyticMap
                    id="vbi"
                    width="100%"
                    height="100%"
                    xmlns:l="sap.ui.layout"
                    initialPosition="34;38;0"
                    initialZoom="4"
                    regionClick="onRegionClick"
                    regionContextMenu="onRegionContextMenu"
                />
            </l:flexContent>
        </l:FixFlex>
    </Page>
</mvc:View>
